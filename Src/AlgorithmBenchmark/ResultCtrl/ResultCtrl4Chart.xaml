<UserControl x:Class="AlgorithmBenchmark.ResultCtrl.ChartResultCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlgorithmBenchmark.ResultCtrl"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <lvc:CartesianChart x:Name="chtResult" LegendLocation="None" Margin="0,0,-0.2,-0.2" Grid.ColumnSpan="2">
        <lvc:CartesianChart.AxisX>
            <lvc:Axis Title="耗时(ms)" ></lvc:Axis>
        </lvc:CartesianChart.AxisX>
        <lvc:CartesianChart.AxisY>
            <lvc:Axis Title="用户" ></lvc:Axis>
        </lvc:CartesianChart.AxisY>
        <lvc:CartesianChart.DataTooltip>
            <lvc:DefaultTooltip SelectionMode="SharedYValues"></lvc:DefaultTooltip>
        </lvc:CartesianChart.DataTooltip>
    </lvc:CartesianChart>
</UserControl>
